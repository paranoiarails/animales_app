<% end %>  


<table class="tabla">

  <tr class="modo2">
    <th>Zona</th>
    <td><%= @zona.nombre %></td> 
    <td></td>
    <td></td>
    <td></td>     
  </tr>

  <tr>
    <th>Zona</th>
