	<td><%= "sin notas" %></td>
    <% else %>
	<td><%= link_to "notas chenil", chenil %></td>
    <%end%>
    <td><%= chenil.estado %></td>
    <td><%= link_to 'Show', chenil %></td>
    <td></td>
    <td></td>
    <!-- if current_persona.perfil.ocupacion_id == 1 %>   
	<td>< link_to 'Edit', edit_chenil_path(chenil) %></td>
	<td>< link_to 'Destroy', chenil, confirm: 'Are you sure?', method: :delete %></td>
    < end %-->
    </tr>

    <% @animals.each do |animal| %>
	<% if animal.chenil_id == chenil.id %>	
              <td>
	      <% if animal.images.empty? %>
   		 <%= link_to image_tag('logo.png'), animal %>
		 <%= animal.nombre %>
   	      <% else %>
    		 <%= link_to image_tag(animal.images.first.image.url(:thumb)), animal %>
		 <%= animal.nombre %>
  	      <%end%>
	      </td>
    <% end %>
	<%end%>

  </tr>
  <% end %>
<% end %>
</table>

