<h1>Listado personas</h1>

<% if current_persona.perfil.ocupacion_id == 1 %>
    <%= link_to 'Nueva persona', new_persona_path %>
<% end %>

<table>
<tr>
<th>Foto</th>
<th>Name</th>
<th>Email</th>
<th>Perfil</th>
<th></th>
<th></th>
<th></th>
</tr>
<% @personas.each do |persona| %>
<tr>
<td<%= gravatar_image_tag persona.email, :size => 20 %>
<td><%= gravatar_for persona, :size => 30 %></td>
<td><%= persona.nombre %></td>
<td><%= persona.email %></td>
<% if !persona.perfil.nil? %>
