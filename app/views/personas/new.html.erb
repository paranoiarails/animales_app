<h1>Nuevo personal</h1>

<%= form_for(@persona) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
	<%= f.label :nombre %><br />
	<%= f.text_field :nombre %>
  </div>
  <div class="field">
	<%= f.label :email %><br />
	<%= f.text_field :email %>
  </div>
  <div class="field">
	<%= f.label :password %><br />
	<%= f.password_field :password %>
  </div>
  <div class="field">
	<%= f.label :password_confirmation, "Confirmation" %><br />
	<%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
	<%= f.submit "Sign up" %>
  </div>
<% end %>

